    <div class="large-8 medium-centered columns ">
    <div class="site forms">
      
      <%= form_tag "/auth/identity/regist" do _tag%>
        
        <% if @identity && @identity.errors.any? %>
          <div class="error_messages">
            <h2>Form is invalid</h2>
            <ul>
              <% for message in @identity.errors.full_messages %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="site-forms">
          
          <div class="field">
            <%= label_tag :name %><br>
            <%= text_field_tag :name, :placeholder => "Name" %>
          </div>

          <div class="field">
            <%= label_tag :email %><br>
            <%= text_field_tag :email, @identity.try(:email), :placeholder => "Email" %>
          </div>

          <div class="field">
            <%= label_tag :password %><br>
            <%= password_field_tag :password, :placeholder => "Password" %>
          </div>
          <div class="field">
            <%= label_tag :password_confirmation %><br/>
            <%= password_field_tag :password_confirmation, :placeholder => "Confirm password" %>
          </div>
          <div class="actions save-me">
            <%= submit_tag "Register", :class => 'button [tiny small large] save-button' %>
          </div>
        </div>
      <% end %>
    </div>
    </div>